{
  "name": "@workspace/crons",
  "version": "1.0.0",
  "description": "Cron jobs for background tasks",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "check": "tsc --noEmit",
    "prebuild": "tsc --noEmit",
    "build:linux": "bun build --compile --minify --sourcemap index.ts --target=bun-linux-x64 --outfile dist/crons-linux",
    "build:macos": "bun build --compile --minify --sourcemap index.ts --target=bun-darwin-arm64 --outfile dist/crons-macos",
    "build:node": "bun build --target=node --sourcemap --outdir dist/ index.ts",
    "start:node": "bun run dist/index.js",
    "dev": "bun run index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint .",
    "lint:fix": "eslint **/*.ts --fix",
    "clean": "rimraf dist"
  },
  "engines": {
    "node": ">=22.14"
  },
  "dependencies": {
    "@orpc/client": "^1.5.2",
    "@supabase/supabase-js": "^2.50.0",
    "@workspace/api": "workspace:*",
    "@workspace/types": "workspace:*",
    "@workspace/utils": "workspace:*",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "commander": "^14.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "node-cron": "^4.2.1",
    "openmeteo": "^1.2.0",
    "pg": "^8.16.3",
    "winston": "^3.11.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/pg": "^8.15.6",
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
