{
  "name": "@workspace/crons",
  "version": "1.0.0",
  "description": "Cron jobs for background tasks",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tsc --noEmit",
    "build:linux": "bun build --compile --minify --sourcemap index.ts --target=bun-linux-x64 --outfile dist/crons-linux",
    "build:macos": "bun build --compile --minify --sourcemap index.ts --target=bun-darwin-arm64 --outfile dist/crons-macos",
    "build:node": "bun build --target=node --sourcemap --outdir dist/ index.ts",
    "start:node": "bun run dist/index.js",
    "job": "bun index.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "ts-check": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rimraf dist"
  },
  "engines": {
    "node": ">=22.14"
  },
  "dependencies": {
    "@orpc/client": "^1.12.2",
    "@supabase/supabase-js": "^2.86.0",
    "@workspace/api": "workspace:*",
    "@workspace/types": "workspace:*",
    "@workspace/utils": "workspace:*",
    "boxen": "^8.0.1",
    "bullmq": "^5.65.1",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "node-cron": "^4.2.1",
    "winston": "^3.18.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "eslint": "^9.39.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  }
}
