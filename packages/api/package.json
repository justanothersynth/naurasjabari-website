{
  "name": "@workspace/api",
  "version": "1.0.0",
  "description": "Express TypeScript API Gateway with oRPC",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "check": "tsc --noEmit",
    "prebuild": "tsc --noEmit",
    "build:linux": "bun build --compile --minify --sourcemap app.ts --target=bun-linux-x64 --outfile dist/api-linux",
    "build:macos": "bun build --compile --minify --sourcemap app.ts --target=bun-darwin-arm64 --outfile dist/api-macos",
    "build:node": "bun build --target=node --sourcemap --outdir dist/ app.ts",
    "generate-openapi": "bun run orpc/generate-openapi.ts",
    "dev": "bun --watch app.ts",
    "start:node": "bun run dist/app.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint .",
    "lint:fix": "eslint **/*.ts --fix",
    "clean": "rimraf dist"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@workspace/types": "workspace:*",
    "@workspace/utils": "workspace:*",
    "@anthropic-ai/sdk": "^0.54.0",
    "@clerk/backend": "^2.1.0",
    "@google/genai": "^1.8.0",
    "@mistralai/mistralai": "^1.7.2",
    "@orpc/client": "^1.5.2",
    "@orpc/openapi": "^1.5.2",
    "@orpc/server": "^1.5.2",
    "@orpc/zod": "^1.5.2",
    "@supabase/supabase-js": "^2.50.0",
    "boxen": "^8.0.1",
    "canvas": "^3.1.2",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fast-csv": "^5.0.2",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "jose": "^6.0.11",
    "morgan": "^1.10.0",
    "openai": "^5.8.2",
    "pdfjs-dist": "^5.3.31",
    "sharp": "^0.34.2",
    "winston": "^3.11.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bun": "^1.2.17",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "rimraf": "^5.0.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
