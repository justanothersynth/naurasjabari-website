{
  "name": "@workspace/api",
  "version": "1.0.0",
  "description": "Express TypeScript API Gateway with oRPC",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "prebuild": "tsc --noEmit",
    "build:linux": "bun build --compile --minify --sourcemap app.ts --target=bun-linux-x64 --outfile dist/api-linux",
    "build:macos": "bun build --compile --minify --sourcemap app.ts --target=bun-darwin-arm64 --outfile dist/api-macos",
    "build:node": "bun build --target=node --sourcemap --outdir dist/ app.ts",
    "generate-openapi": "bun run orpc/generate-openapi.ts",
    "dev": "bun --watch app.ts",
    "start:node": "bun run dist/app.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "ts-check": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rimraf dist"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@google/genai": "^1.30.0",
    "@mistralai/mistralai": "^1.10.0",
    "@orpc/client": "^1.12.2",
    "@orpc/openapi": "^1.12.2",
    "@orpc/server": "^1.12.2",
    "@orpc/zod": "^1.12.2",
    "@supabase/supabase-js": "^2.86.0",
    "@workspace/types": "workspace:*",
    "@workspace/utils": "workspace:*",
    "boxen": "^8.0.1",
    "canvas": "^3.2.0",
    "chalk": "^5.6.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "fast-csv": "^5.0.5",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jose": "^6.1.3",
    "morgan": "^1.10.1",
    "openai": "^6.9.1",
    "sharp": "^0.34.5",
    "winston": "^3.18.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.3.3",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "eslint": "^9.39.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
